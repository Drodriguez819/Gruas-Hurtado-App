        .login-box { background: white; padding: 40px; border-radius: 10px; box-shadow: 0 10px 25px rgba(0,0,0,0.2); width: 100%; max-width: 350px; }
        .login-box h1 { text-align: center; margin-bottom: 30px; }
        .form-group { margin-bottom: 20px; }
        .form-group label { display: block; margin-bottom: 8px; font-weight: 500; }
        .form-group input, .form-group select { width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 5px; }
        .btn { width: 100%; padding: 12px; border: none; border-radius: 5px; font-weight: 600; cursor: pointer; }
        .btn-primary { background-color: #667eea; color: white; }
        .btn-secondary { background-color: #6c757d; color: white; }
        .btn-danger { background-color: #dc3545; color: white; }
        .btn-success { background-color: #28a745; color: white; }
        .btn-sm { padding: 6px 12px; font-size: 14px; width: auto; margin: 3px; }
        .demo-login { margin-top: 20px; padding-top: 20px; border-top: 1px solid #eee; }
        .demo-login p { font-size: 12px; color: #999; margin-bottom: 10px; }
        .app-container { display: none; height: 100vh; flex-direction: column; }
        .app-container.active { display: flex; }
        .header { background-color: #667eea; color: white; padding: 20px; display: flex; justify-content: space-between; }
        .header-right { display: flex; gap: 20px; align-items: center; }
        .logout-btn { background-color: rgba(255,255,255,0.2); color: white; border: 1px solid white; padding: 8px 16px; border-radius: 5px; cursor: pointer; }
        .main-content { display: flex; flex: 1; overflow: hidden; }
        .sidebar { width: 250px; background-color: #2c3e50; color: white; padding: 20px; overflow-y: auto; }
        .sidebar h2 { font-size: 16px; margin-bottom: 20px; }
        .sidebar-menu { list-style: none; }
        .sidebar-menu a { display: block; padding: 12px; color: #ecf0f1; text-decoration: none; border-radius: 5px; cursor: pointer; margin-bottom: 10px; }
        .sidebar-menu a:hover, .sidebar-menu a.active { background-color: #667eea; }
        .content-area { flex: 1; overflow-y: auto; padding: 30px; }
        .page { display: none; }
        .page.active { display: block; }
        .page-title { font-size: 28px; margin-bottom: 20px; }
        .card { background: white; border-radius: 8px; padding: 20px; margin-bottom: 20px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); }
        .card-title { font-size: 20px; margin-bottom: 15px; border-bottom: 2px solid #667eea; padding-bottom: 10px; }
        .form-row { display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 20px; }
        .form-row.full { grid-template-columns: 1fr; }
        .table { width: 100%; border-collapse: collapse; background: white; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); }
        .table th { background-color: #667eea; color: white; padding: 15px; text-align: left; }
        .table td { padding: 12px 15px; border-bottom: 1px solid #eee; }
        .table tr:hover { background-color: #f9f9f9; }
        .table-actions { display: flex; gap: 5px; }
        .modal { display: none; position: fixed; z-index: 1000; left: 0; top: 0; width: 100%; height: 100%; background-color: rgba(0,0,0,0.5); justify-content: center; align-items: center; }
        .modal.active { display: flex; }
        .modal-content { background: white; padding: 30px; border-radius: 8px; width: 90%; max-width: 500px; max-height: 90vh; overflow-y: auto; }
        .modal-header { font-size: 20px; margin-bottom: 20px; border-bottom: 2px solid #667eea; padding-bottom: 10px; display: flex; justify-content: space-between; }
        .close-btn { background: none; border: none; font-size: 24px; cursor: pointer; }
        .modal-footer { margin-top: 20px; display: flex; gap: 10px; justify-content: flex-end; }
        .alert { padding: 15px; border-radius: 5px; margin-bottom: 20px; display: none; }
        .alert.active { display: block; }
        .alert-success { background-color: #d4edda; color: #155724; }
        .alert-danger { background-color: #f8d7da; color: #721c24; }
        .badge { display: inline-block; padding: 4px 8px; border-radius: 3px; font-size: 12px; font-weight: 600; background-color: #d1ecf1; color: #0c5460; }
        .info-text { font-size: 14px; color: #666; margin-bottom: 10px; }
        .no-data { text-align: center; padding: 40px 20px; color: #999; }
    </style>
</head>
<body>
    <div class="login-container" id="loginPage">
        <div class="login-box">
            <h1>Tow Truck App</h1>
            <form id="loginForm">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" required>
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
            <div class="demo-login">
                <p><strong>Demo Accounts:</strong></p>
                <button type="button" class="btn btn-sm btn-secondary demo-btn" onclick="demoLogin('super_admin', 'password123')">Super Admin</button>
                <button type="button" class="btn btn-sm btn-secondary demo-btn" onclick="demoLogin('admin1', 'password123')">Admin</button>
                <button type="button" class="btn btn-sm btn-secondary demo-btn" onclick="demoLogin('manager1', 'password123')">Manager</button>
                <button type="button" class="btn btn-sm btn-secondary demo-btn" onclick="demoLogin('user1', 'password123')">User</button>
            </div>
        </div>
    </div>

    <div class="app-container" id="appContainer">
        <div class="header">
            <h1>Tow Truck Management</h1>
            <div class="header-right">
                <div class="user-info">
                    <p><strong id="displayName"></strong></p>
                    <p id="displayRole"></p>
                </div>
                <button class="logout-btn" onclick="logout()">Logout</button>
            </div>
        </div>

        <div class="main-content">
            <div class="sidebar">
                <h2>Menu</h2>
                <ul class="sidebar-menu" id="sidebarMenu">
                    <li><a onclick="showPage('dashboard')" class="menu-item active">Dashboard</a></li>
                    <li><a onclick="showPage('client-profiles')" class="menu-item">Client Profiles</a></li>
                    <li><a onclick="showPage('employee-accounts')" class="menu-item">Employee Accounts</a></li>
                </ul>
            </div>

            <div class="content-area">
                <div class="alert" id="alert"></div>

                <div class="page active" id="dashboard">
                    <h2 class="page-title">Dashboard</h2>
                    <div class="card">
                        <div class="card-title">Welcome</div>
                        <p id="dashboardWelcome"></p>
                    </div>
                    <div class="card">
                        <div class="card-title">Quick Stats</div>
                        <div id="dashboardStats"></div>
                    </div>
                </div>

                <div class="page" id="client-profiles">
                    <h2 class="page-title">Client Profiles</h2>
                    <div class="card">
                        <div class="card-title">Create New Client Profile</div>
                        <div class="form-row full">
                            <div class="form-group">
                                <label>Client Name</label>
                                <input type="text" id="newClientName" placeholder="Enter client name">
                            </div>
                            <div class="form-group">
                                <label>Vehicle Info</label>
                                <input type="text" id="newClientVehicle" placeholder="e.g., 2020 Honda Civic, Blue">
                            </div>
                            <button type="button" class="btn btn-success" onclick="createClientProfile()">Create Profile</button>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-title">All Client Profiles</div>
                        <div id="clientProfilesContainer"></div>
                    </div>
                </div>

                <div class="page" id="employee-accounts">
                    <h2 class="page-title">Employee Accounts</h2>
                    <div class="card" id="createAccountCard" style="display: none;">
                        <div class="card-title">Create New Account</div>
                        <div class="form-row">
                            <div class="form-group">
                                <label>Username</label>
                                <input type="text" id="newUsername" placeholder="Enter username">
                            </div>
                            <div class="form-group">
                                <label>Account Type</label>
                                <select id="newAccountType">
                                    <option value="">Select account type</option>
                                    <option value="admin">Admin</option>
                                    <option value="manager">Manager</option>
                                    <option value="user">User</option>
                                </select>
                            </div>
                        </div>
                        <button type="button" class="btn btn-success" onclick="createEmployeeAccount()">Create Account</button>
                    </div>
                    <div class="card">
                        <div class="card-title">Employees</div>
                        <div id="employeeAccountsContainer"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="editClientModal">
        <div class="modal-content">
            <div class="modal-header">
                <span>Edit Client Profile</span>
                <button type="button" class="close-btn" onclick="closeModal('editClientModal')">&times;</button>
            </div>
            <div class="form-group">
                <label>Client Name</label>
                <input type="text" id="editClientName">
            </div>
            <div class="form-group">
                <label>Vehicle Info</label>
                <input type="text" id="editClientVehicle">
            </div>
            <div class="form-group info-text" id="editClientHistory"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="closeModal('editClientModal')">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveClientProfile()">Save Changes</button>
            </div>
        </div>
    </div>

    <div class="modal" id="editEmployeeModal">
        <div class="modal-content">
            <div class="modal-header">
                <span>Edit Employee Account</span>
                <button type="button" class="close-btn" onclick="closeModal('editEmployeeModal')">&times;</button>
            </div>
            <div class="form-group">
                <label>Username</label>
                <input type="text" id="editEmployeeUsername" disabled>
            </div>
            <div class="form-group">
                <label>Account Type</label>
                <select id="editEmployeeType">
                    <option value="user">User</option>
                    <option value="manager">Manager</option>
                    <option value="admin">Admin</option>
                </select>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="closeModal('editEmployeeModal')">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="deleteEmployeeAccount()">Delete Account</button>
                <button type="button" class="btn btn-primary" onclick="saveEmployeeAccount()">Save Changes</button>
            </div>
        </div>
    </div>

    <script>
        let mockDatabase = {
            users: [
                { id: 1, username: 'super_admin', password: 'password123', role: 'super_admin', name: 'Super Admin User' },
                { id: 2, username: 'admin1', password: 'password123', role: 'admin', name: 'Admin User' },
                { id: 3, username: 'manager1', password: 'password123', role: 'manager', name: 'Manager User' },
                { id: 4, username: 'user1', password: 'password123', role: 'user', name: 'Regular User' }
            ],
            clientProfiles: [
                { id: 1, name: 'John Smith', vehicle: '2018 Ford F-150, Red', createdBy: 'user1', createdByName: 'Regular User', lastEditedBy: 'user1', lastEditedByName: 'Regular User', lastEditedDate: '2025-01-15' },
                { id: 2, name: 'Jane Doe', vehicle: '2020 Toyota Camry, Silver', createdBy: 'manager1', createdByName: 'Manager User', lastEditedBy: 'manager1', lastEditedByName: 'Manager User', lastEditedDate: '2025-01-14' }
            ]
        };

        let currentUser = null;
        let editingClientId = null;
        let editingEmployeeUsername = null;

        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            const user = mockDatabase.users.find(u => u.username === username && u.password === password);
            if (user) {
                currentUser = user;
                showApp();
            } else {
                alert('Invalid username or password');
            }
        });

        function demoLogin(username, password) {
            const user = mockDatabase.users.find(u => u.username === username && u.password === password);
            if (user) {
                currentUser = user;
                showApp();
            }
        }

        function showApp() {
            document.getElementById('loginPage').style.display = 'none';
            document.getElementById('appContainer').classList.add('active');
            document.getElementById('displayName').textContent = currentUser.name;
            document.getElementById('displayRole').textContent = '(' + currentUser.role.replace('_', ' ').toUpperCase() + ')';
            updateSidebarMenu();
            loadDashboard();
            showPage('dashboard');
        }

        function logout() {
            currentUser = null;
            document.getElementById('loginPage').style.display = 'flex';
            document.getElementById('appContainer').classList.remove('active');
            document.getElementById('loginForm').reset();
            document.getElementById('username').focus();
        }

        function userCan(action) {
            const role = currentUser.role;
            const permissions = {
                'create_client': ['super_admin', 'admin', 'manager', 'user'],
                'edit_any_client': ['super_admin', 'admin', 'manager'],
                'edit_own_client': ['super_admin', 'admin', 'manager', 'user'],
                'delete_client': ['super_admin', 'admin'],
                'manage_employees': ['super_admin', 'admin', 'manager'],
                'delete_employee': ['super_admin', 'admin'],
                'edit_employee': ['super_admin', 'admin']
            };
            return permissions[action] && permissions[action].includes(role);
        }

        function updateSidebarMenu() {
            const createCard = document.getElementById('createAccountCard');
            if (userCan('manage_employees')) {
                createCard.style.display = 'block';
            } else {
                createCard.style.display = 'none';
            }
        }

        function showPage(pageName) {
            document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
            document.getElementById(pageName).classList.add('active');
            document.querySelectorAll('.menu-item').forEach(m => m.classList.remove('active'));
            event.target.classList.add('active');
            if (pageName === 'client-profiles') {
                loadClientProfiles();
            } else if (pageName === 'employee-accounts') {
                loadEmployeeAccounts();
            } else if (pageName === 'dashboard') {
                loadDashboard();
            }
        }

        function loadDashboard() {
            const welcome = document.getElementById('dashboardWelcome');
            const stats = document.getElementById('dashboardStats');
            welcome.textContent = 'Welcome, ' + currentUser.name + '! You are logged in as a ' + currentUser.role.replace('_', ' ') + '.';
            let statsHtml = '<p>Total Client Profiles: <strong>' + mockDatabase.clientProfiles.length + '</strong></p>';
            statsHtml += '<p>Total Employees: <strong>' + mockDatabase.users.length + '</strong></p>';
            statsHtml += '<p>Your Account Level: <strong>' + currentUser.role.toUpperCase() + '</strong></p>';
            stats.innerHTML = statsHtml;
        }

        function loadClientProfiles() {
            const container = document.getElementById('clientProfilesContainer');
            if (mockDatabase.clientProfiles.length === 0) {
                container.innerHTML = '<p class="no-data">No client profiles yet.</p>';
                return;
            }
            let html = '<table class="table"><thead><tr><th>Client Name</th><th>Vehicle</th><th>Created By</th><th>Last Edited</th><th>Actions</th></tr></thead><tbody>';
            mockDatabase.clientProfiles.forEach(profile => {
                const canEdit = userCan('edit_any_client') || (userCan('edit_own_client') && profile.createdBy === currentUser.username);
                html += '<tr><td>' + profile.name + '</td><td>' + profile.vehicle + '</td><td>' + profile.createdByName + '</td><td>' + profile.lastEditedByName + ' (' + profile.lastEditedDate + ')</td><td class="table-actions">';
                if (canEdit) html += '<button class="btn btn-sm btn-primary" onclick="openEditClientModal(' + profile.id + ')">Edit</button>';
                if (userCan('delete_client')) html += '<button class="btn btn-sm btn-danger" onclick="deleteClientProfile(' + profile.id + ')">Delete</button>';
                html += '</td></tr>';
            });
            html += '</tbody></table>';
            container.innerHTML = html;
        }

        function createClientProfile() {
            const name = document.getElementById('newClientName').value.trim();
            const vehicle = document.getElementById('newClientVehicle').value.trim();
            if (!name || !vehicle) {
                showAlert('Please fill in all fields', 'danger');
                return;
            }
            const newProfile = {
                id: mockDatabase.clientProfiles.length + 1,
                name: name,
                vehicle: vehicle,
                createdBy: currentUser.username,
                createdByName: currentUser.name,
                lastEditedBy: currentUser.username,
                lastEditedByName: currentUser.name,
                lastEditedDate: new Date().toISOString().split('T')[0]
            };
            mockDatabase.clientProfiles.push(newProfile);
            document.getElementById('newClientName').value = '';
            document.getElementById('newClientVehicle').value = '';
            showAlert('Client profile created successfully', 'success');
            loadClientProfiles();
        }

        function openEditClientModal(clientId) {
            editingClientId = clientId;
            const profile = mockDatabase.clientProfiles.find(p => p.id === clientId);
            document.getElementById('editClientName').value = profile.name;
            document.getElementById('editClientVehicle').value = profile.vehicle;
            document.getElementById('editClientHistory').innerHTML = '<strong>Created By:</strong> ' + profile.createdByName + ' | <strong>Last Edited By:</strong> ' + profile.lastEditedByName + ' on ' + profile.lastEditedDate;
            document.getElementById('editClientModal').classList.add('active');
        }

        function saveClientProfile() {
            const profile = mockDatabase.clientProfiles.find(p => p.id === editingClientId);
            profile.name = document.getElementById('editClientName').value;
            profile.vehicle = document.getElementById('editClientVehicle').value;
            profile.lastEditedBy = currentUser.username;
            profile.lastEditedByName = currentUser.name;
            profile.lastEditedDate = new Date().toISOString().split('T')[0];
            closeModal('editClientModal');
            showAlert('Client profile updated successfully', 'success');
            loadClientProfiles();
        }

        function deleteClientProfile(clientId) {
            if (confirm('Are you sure you want to delete this profile?')) {
                mockDatabase.clientProfiles = mockDatabase.clientProfiles.filter(p => p.id !== clientId);
                showAlert('Client profile deleted', 'success');
                loadClientProfiles();
            }
        }

        function loadEmployeeAccounts() {
            const container = document.getElementById('employeeAccountsContainer');
            if (mockDatabase.users.length === 0) {
                container.innerHTML = '<p class="no-data">No employee accounts.</p>';
                return;
            }
            let html = '<table class="table"><thead><tr><th>Username</th><th>Name</th><th>Role</th><th>Actions</th></tr></thead><tbody>';
            mockDatabase.users.forEach(user => {
                let canEdit = false;
                if (currentUser.role === 'super_admin') {
                    canEdit = user.role !== 'super_admin';
                } else if (currentUser.role === 'admin') {
                    canEdit = user.role === 'manager' || user.role === 'user';
                } else if (currentUser.role === 'manager') {
                    canEdit = user.role === 'user';
                }
                html += '<tr><td>' + user.username + '</td><td>' + user.name + '</td><td><span class="badge">' + user.role.toUpperCase() + '</span></td><td class="table-actions">';
                if (canEdit) html += '<button class="btn btn-sm btn-primary" onclick="openEditEmployeeModal(\'' + user.username + '\')">Edit</button>';
                else html += '<span style="color: #999;">No Actions</span>';
                html += '</td></tr>';
            });
            html += '</tbody></table>';
            container.innerHTML = html;
        }

        function createEmployeeAccount() {
            const username = document.getElementById('newUsername').value.trim();
            const accountType = document.getElementById('newAccountType').value;
            if (!username || !accountType) {
                showAlert('Please fill in all fields', 'danger');
                return;
            }
            if (mockDatabase.users.find(u => u.username === username)) {
                showAlert('Username already exists', 'danger');
                return;
            }
            const newUser = {
                id: mockDatabase.users.length + 1,
                username: username,
                password: 'password123',
                role: accountType,
                name: username.charAt(0).toUpperCase() + username.slice(1)
            };
            mockDatabase.users.push(newUser);
            document.getElementById('newUsername').value = '';
            document.getElementById('newAccountType').value = '';
            showAlert('Employee account created successfully', 'success');
            loadEmployeeAccounts();
        }

        function openEditEmployeeModal(username) {
            editingEmployeeUsername = username;
            const user = mockDatabase.users.find(u => u.username === username);
            document.getElementById('editEmployeeUsername').value = user.username;
            document.getElementById('editEmployeeType').value = user.role;
            document.getElementById('editEmployeeModal').classList.add('active');
        }

        function saveEmployeeAccount() {
            const user = mockDatabase.users.find(u => u.username === editingEmployeeUsername);
            user.role = document.getElementById('editEmployeeType').value;
            closeModal('editEmployeeModal');
            showAlert('Employee account updated successfully', 'success');
            loadEmployeeAccounts();
        }

        function deleteEmployeeAccount() {
            if (confirm('Are you sure you want to delete this account?')) {
                mockDatabase.users = mockDatabase.users.filter(u => u.username !== editingEmployeeUsername);
                closeModal('editEmployeeModal');
                showAlert('Employee account deleted', 'success');
                loadEmployeeAccounts();
            }
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
        }

        function showAlert(message, type) {
            const alert = document.getElementById('alert');
            alert.textContent = message;
            alert.className = 'alert alert-' + type + ' active';
            setTimeout(() => {
                alert.classList.remove('active');
            }, 3000);
        }

        document.getElementById('username').focus();
    </script>
</body>
</html>
